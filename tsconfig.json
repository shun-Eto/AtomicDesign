{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"noResolve": false,
		"removeComments": false,
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"keyofStringsOnly": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@client/*": ["src/client/*"],
			"@server/*": ["src/server/*"]
		},
		"lib": ["es6", "dom", "es2015"],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "dist"
	},
	"typeRoots": ["node_modules/@types", "src/@type"],
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts",
		"./node_modules/**/*"
	],
	"include": ["./src/**/*", "@type"]
}
